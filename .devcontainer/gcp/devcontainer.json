{
  "name": "Neural OptiX Renderer (GCP GPU)",

  // Use your prebuilt Artifact Registry image
  // "image": "asia-southeast1-docker.pkg.dev/neural-raytracer/neural-raytracer-docker-repo/neural-optix:sm_75-dev",
  "image": "lmd-working-tcnn",

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // GPU + debug-friendly runtime settings
  "runArgs": [
    "--gpus", "all",
    "--shm-size=16g",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],

  // Match the env you already use
  "containerEnv": {
    "OptiX_INSTALL_DIR": "/opt/optix",
    "TCNN_DIR": "/opt/tiny-cuda-nn",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "compute,utility,graphics"
  },

  // Same devcontainer features as local
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // Same VS Code setup as your local config
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "nvidia.nsight-vscode-edition",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "twxs.cmake",
        "jeff-hykin.better-cpp-syntax",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "cmake.buildDirectory": "${workspaceFolder}/build",
        "cmake.configureOnOpen": true,
        "cmake.generator": "Ninja",
        "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
        "C_Cpp.default.cppStandard": "c++17",
        "C_Cpp.default.includePath": [
          "${workspaceFolder}/src",
          "${workspaceFolder}/include",
          "/opt/optix/include",
          "/opt/tiny-cuda-nn/include",
          "/usr/local/cuda/include"
        ],
        "files.associations": {
          "*.cu": "cuda-cpp",
          "*.cuh": "cuda-cpp"
        },
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // Reuse the same post-create logic
  "postCreateCommand": "bash .devcontainer/common/post-create.sh",
  "postStartCommand": "echo 'Neural OptiX Renderer Dev Container Ready!'",

  // Only use this if your image actually has a 'developer' user
  "remoteUser": "developer"
}
